# Frontend Staging Environment Variables
# Used for staging/pre-production environment

# API Configuration
VITE_API_BASE_URL=https://staging-api.your-domain.com
VITE_API_VERSION=v1
VITE_APP_NAME=Final Project Management System (Staging)
VITE_APP_VERSION=1.0.0

# Staging Settings
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# API Endpoints
VITE_API_AUTH_URL=https://staging-api.your-domain.com/api/auth/
VITE_API_PROJECTS_URL=https://staging-api.your-domain.com/api/projects/
VITE_API_STUDENTS_URL=https://staging-api.your-domain.com/api/students/
VITE_API_ADVISORS_URL=https://staging-api.your-domain.com/api/advisors/

# WebSocket Settings
VITE_WS_URL=wss://staging-api.your-domain.com/ws/

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,jpg,jpeg,png,gif

# UI Settings
VITE_THEME=light
VITE_LANGUAGE=en
VITE_TIMEZONE=Asia/Vientiane

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true

# Staging
VITE_MOCK_API=false
VITE_USE_DEV_TOOLS=false
VITE_ENABLE_HOT_RELOAD=false
VITE_ENABLE_DEV_TOOLS=false

# Local Storage
VITE_LOCAL_STORAGE_KEY=fpm_staging_storage

# Testing
VITE_TEST_MODE=false
VITE_MOCK_AUTH=false
