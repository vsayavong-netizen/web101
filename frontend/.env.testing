# Frontend Testing Environment Variables
# Used when running tests

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1
VITE_APP_NAME=Final Project Management System (Testing)
VITE_APP_VERSION=1.0.0

# Testing Settings
VITE_DEBUG=false
VITE_LOG_LEVEL=error

# API Endpoints
VITE_API_AUTH_URL=http://localhost:8000/api/auth/
VITE_API_PROJECTS_URL=http://localhost:8000/api/projects/
VITE_API_STUDENTS_URL=http://localhost:8000/api/students/
VITE_API_ADVISORS_URL=http://localhost:8000/api/advisors/

# WebSocket Settings
VITE_WS_URL=ws://localhost:8000/ws/

# File Upload Settings
VITE_MAX_FILE_SIZE=1048576
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,jpg,jpeg,png,gif

# UI Settings
VITE_THEME=light
VITE_LANGUAGE=en
VITE_TIMEZONE=Asia/Vientiane

# Feature Flags
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=false
VITE_ENABLE_FILE_UPLOAD=true

# Testing
VITE_MOCK_API=true
VITE_USE_DEV_TOOLS=false
VITE_ENABLE_HOT_RELOAD=false
VITE_ENABLE_DEV_TOOLS=false

# Local Storage
VITE_LOCAL_STORAGE_KEY=fpm_test_storage

# Testing
VITE_TEST_MODE=true
VITE_MOCK_AUTH=true
