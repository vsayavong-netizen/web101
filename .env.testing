# Testing Environment Variables
# Used when running tests

# Django Settings
SECRET_KEY=django-insecure-testing-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Database Settings (SQLite for testing)
# Using in-memory SQLite for faster tests
DATABASE_URL=sqlite:///:memory:

# Redis Settings (optional for testing)
REDIS_URL=redis://localhost:6379/1

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.locmem.EmailBackend

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cache Settings
CACHE_URL=redis://localhost:6379/2

# AI Services (disabled for testing)
GEMINI_API_KEY=

# Testing Settings
ALLOW_DEV_TOKENS=True
LOG_LEVEL=WARNING

# Security Settings (relaxed for testing)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=False
SECURE_CONTENT_TYPE_NOSNIFF=False
X_FRAME_OPTIONS=ALLOW

# Session Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=False
SESSION_COOKIE_SAMESITE=None
SESSION_COOKIE_AGE=3600

# CSRF Settings
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=False
CSRF_COOKIE_SAMESITE=None

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=test_staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=test_media
