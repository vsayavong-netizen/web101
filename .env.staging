# Staging Environment Variables
# Used for staging/pre-production environment

# Django Settings
SECRET_KEY=your-staging-secret-key-here
DEBUG=False
ALLOWED_HOSTS=staging.your-domain.com,staging-backend.your-domain.com

# Database Settings (PostgreSQL for staging)
DB_NAME=final_project_management_staging
DB_USER=postgres
DB_PASSWORD=your-staging-database-password
DB_HOST=staging-db.your-domain.com
DB_PORT=5432

# Redis Settings
REDIS_URL=redis://staging-redis.your-domain.com:6379/0
CELERY_BROKER_URL=redis://staging-redis.your-domain.com:6379/0
CELERY_RESULT_BACKEND=redis://staging-redis.your-domain.com:6379/0

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-staging-email@gmail.com
EMAIL_HOST_PASSWORD=your-staging-app-password
DEFAULT_FROM_EMAIL=noreply@staging.your-domain.com

# CORS Settings
CORS_ALLOWED_ORIGINS=https://staging.your-domain.com,https://staging-frontend.your-domain.com

# Cache Settings
CACHE_URL=redis://staging-redis.your-domain.com:6379/1

# AI Services
GEMINI_API_KEY=your-staging-gemini-api-key

# Security Settings (moderate for staging)
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Session Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
SESSION_COOKIE_AGE=3600

# CSRF Settings
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Strict
CSRF_TRUSTED_ORIGINS=https://staging.your-domain.com,https://staging-frontend.your-domain.com

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/opt/staging/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/opt/staging/media

# Logging
LOG_LEVEL=INFO
